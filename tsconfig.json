{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["ESNext"],
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "e2e",
    "sample",
    "jest.config.ts",
    "jest.e2e.config.ts",
    "jest.sample.config.ts",
    "**/*.test.ts"
  ]
}
